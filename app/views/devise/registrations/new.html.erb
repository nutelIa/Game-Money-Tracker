<div class="main">
<div class="authform">
  <div class = 'signinbubble'>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <div class = 'pagetitle' style='text-align:center;'> Sign up </div>
      <% if devise_error_messages! %>
        <%= devise_error_messages! %>
      <% end %>
      <div class="form-group">
        <%= f.email_field :email, class: 'field', placeholder: 'Email' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'field', placeholder: 'Password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'field', placeholder: 'Password confirmation' %>
      </div>
       <%= f.submit 'Sign up', class: 'clicky'%>
    <% end %>
  </div>
</div>
</div>